<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thevisionaries.electricitysurveillancesystem.DeviceSwitchActivityFragment"
    tools:showIn="@layout/activity_device_switch">

    <ProgressBar
        android:id="@+id/devices_progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/devices_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />

</RelativeLayout>